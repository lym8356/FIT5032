<section>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt p-t-130 col-lg-4" data-tilt>
                    <img src="~/Vendors/Login_template/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("ExternalLoginConfirmation", "Account", FormMethod.Post, new { @class = "login100-form validate-form row col-lg-4", role = "form", enctype = "multipart/form-data", ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title">
                        Associate your @ViewBag.LoginProvider account.
                    </span>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="wrap-input100 validate-input" data-validate="Please enter a username">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "input100", placeholder = "Username" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fas fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                    <div class="wrap-input100 validate-input" data-validate="Please enter your full name">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "input100", placeholder = "Full Name" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-id-card" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", placeholder = "Email" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


                    <div class="wrap-input100 validate-input" data-validate="Please enter your DOB">
                        @Html.TextBoxFor(m => m.DOB, new { @class = "input100", placeholder = "DOB", id = "datepicker" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100" style="padding-left:34px;">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger" })

                    <div class="wrap-input100 validate-input" data-validate="Please enter a valid phone number">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "input100", placeholder = "Phone Number" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100" style="padding-left:34px;">
                            <i class="fas fa-phone" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })

                    <div class="wrap-input100 validate-input" style="text-align: center">
                        <div class="form-group pull-left" style="font-family: Poppins-Medium; font-size: 15px;">
                            Profile pricture :
                            @Html.TextBoxFor(m => m.ProfilePicturePath, new
                            {
                                @class = "input100 pt-2",
                                type = "file",
                                placeholder = "Profile Picture",
                                accept = ".png,.jpg,.jpeg,.gif,.tif",
                                name = "ProfilePicturePath"
                            })
                            <span class="symbol-input100" style="padding-left:34px; padding-top:15px;">
                                <i class="fa fa-file-image-o" aria-hidden="true"></i>
                            </span>
                        </div>
                        <span class="focus-input100"></span>
                    </div>
                    @Html.ValidationMessageFor(m => m.ProfilePicturePath, "", new { @class = "text-danger" })

                    <div class="container-login100-form-btn pull-right pt-5" style="width: 100%;">
                        <button class="login100-form-btn" type="submit">
                            Create
                        </button>
                    </div>
                 }
            </div>
        </div>
    </div>
</section>

