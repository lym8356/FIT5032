    <link rel="stylesheet" type="text/css" href="~/Vendors/Frontend_template/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Vendors/Frontend_template/plugins/jquery-ui-1.12.1.custom/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="~/Vendors/Frontend_template/styles/shop_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Vendors/Frontend_template/styles/shop_responsive.css">
