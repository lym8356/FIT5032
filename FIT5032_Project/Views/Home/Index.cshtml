                                <li><a href="#">...</a></li>
                                <li><a href="#">21</a></li>
                            </ul>
                            <div class="page_next d-flex flex-column align-items-center justify-content-center"><i class="fas fa-chevron-right"></i></div>
                        </div>*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Vendors/Frontend_template/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Vendors/Frontend_template/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Vendors/Frontend_template/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Vendors/Frontend_template/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Vendors/Frontend_template/js/shop_custom.js"></script>
}
